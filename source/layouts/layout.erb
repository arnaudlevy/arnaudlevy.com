<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_article.title + ' - ' unless current_article.nil? %>Arnaud Levy</title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= favicon_tag "arnaud-levy.png" %>
  </head>
  <body>
    <nav><%= link_to image_tag('arnaud-levy.png', alt: 'Arnaud Levy'), '/' %></nav>
    <main>
      <% if current_article %><h1><%= current_article.title %></h1><% end %>
      <%= yield %>
    </main>
  </body>
</html>
