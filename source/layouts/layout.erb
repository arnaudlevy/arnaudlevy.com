<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_article.title + ' - ' unless current_article.nil? %>Arnaud Levy</title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <%= favicon_tag "arnaud-levy.png" %>
  </head>
  <body>
    <nav>
      <%= link_to image_tag('arnaud-levy.png', alt: 'Arnaud Levy'), '/' %>
      <a href="/a-propos" class="about">Ã  propos</a>    
    </nav>
    <main>
      <% if current_article %>
        <% if current_article.data.image %>
          <img src="<%= current_article.data.image %>" alt="<%= escape_html current_article.title %>" />
        <% end %>
        <time datetime="<%= current_article.date.strftime('%Y-%m-%d') %>">
          <%= current_article.date.strftime('%d/%m/%Y') %>
        </time>
        <h1><%= current_article.title %></h1>
      <% end %>
      <% unless table_of_contents.blank? %>
        <div class="toc"><%= table_of_contents %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
